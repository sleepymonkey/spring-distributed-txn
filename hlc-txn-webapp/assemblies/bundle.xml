<assembly>
    <id>bundle</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
        <source>target/hlc-txn.war</source>
        <outputDirectory>${version}/webapps</outputDirectory>
        <destName>hlc-txn.war</destName>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>files/tomcat-conf</directory>
            <outputDirectory>${version}/conf</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>files/bin</directory>
            <outputDirectory>${version}/scripts</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>files</directory>
            <outputDirectory>${version}</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
    </fileSets>
</assembly>
